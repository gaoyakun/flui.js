{
    "compilerOptions": {
        "baseUrl": ".",
        "downlevelIteration": true,
        "moduleResolution": "node",
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom",
            "DOM.Iterable"
        ],
        "rootDirs": ["src"],
        "paths": {
            "shaders/*": ["src/shaders/*"]
        },
        "strict": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": false,
        "listEmittedFiles": true,
        "noUnusedLocals": false,
        "strictNullChecks": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "sourceMap": true,
        "stripInternal": true,
        "keyofStringsOnly": false
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.d.ts",
        "tests"
    ]
}